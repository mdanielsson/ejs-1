#!/usr/bin/env ejs

if (App.args.length < 2) {
    throw "Usage: memmon APP"
}

let max = 0
while (true) {
    size = System.sh("memsize " + App.args[1]) 
    size = size cast Number
    if (size > max) {
        max = size
        print("Size " + ("%5.3f" % (max/1024)) + " M at " + Date().format("%a %e %b %H:%M"))
    }
    App.sleep(5 * 1024)
}
