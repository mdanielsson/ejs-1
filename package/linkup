#
#   Create or modify symlinks for the most recent installed versions of Ejscript
#
#   Copyright (c) Embedthis Software LLC, 2003-2010. All Rights Reserved.
#

TASK=$1
ROOT_DIR="${2%/}"
PRODUCT=ejs
EXE=
INC="${ROOT_DIR}/usr/include"
MAN="${ROOT_DIR}/usr/share/man"
PROGRAMS="ejs ejsc ejscgi ejsmod ejssql ejsvm ejsweb ejsmvc ejspage jem"

if [ -x "${ROOT_DIR}/usr/local/bin" ] ; then
    BIN="${ROOT_DIR}/usr/local/bin"
else 
    BIN="${ROOT_DIR}/usr/bin"
fi

prefix="${ROOT_DIR}/usr/lib/${PRODUCT}"
version=
for v in `ls $prefix | egrep -v '[a-zA-Z@!_\-]' | sort -n -r`
do
    if [ -x "$prefix/$v/bin/ejs" ] ; then
        version=$v
        break
    fi
done

if [ "$version" = "" ] ; then
    for name in $PROGRAMS
    do
        rm -f "${BIN}/$name"
    done
    rm -fr "${INC}/${PRODUCT}"
else
    latest=${prefix}/$version
    bin=${latest}/bin
    inc=${latest}/inc
    man=${latest}/doc/man

    [ ! -x "${BIN}" ] && mkdir -p "${BIN}"

    home=`pwd`
    for name in $PROGRAMS
    do
        name=${name}${EXE}
        rm -f "${BIN}/${name}"
        if [ -f "${bin}/${name}" ] ; then
            ln -s "${bin}/${name}" "${BIN}/${name}"
        fi
    done

    if [ -d "${inc}" ] ; then
        [ ! -x "${INC}" ] && mkdir -p "${INC}"
        rm -rf  "${INC}/${PRODUCT}"
        ln -s "${inc}" "${INC}/${PRODUCT}"
    fi
    if [ -d "${man}" ] ; then
        [ ! -x "${MAN}" ] && mkdir -p "${MAN}"
        for f in ${man}/*.1.gz
        do
            name=`basename "$f"`
            rm -f "${MAN}/man1/${name}"
            ln -s "${f}" "${MAN}/man1/${name}"
        done
    fi
fi
