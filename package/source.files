DIR="${BLD_SRC_PREFIX}"

usePrefixes SRC

#
#   Standard release files
#
makeDir "${DIR}/src" "${DIR}/build/bin" "${DIR}/obj" "${DIR}/bin" "${DIR}/lib" "${DIR}/modules" "${DIR}/all"

cpy -e                    Makefile "${DIR}"
cpy -w -e                 "*.TXT" "${DIR}"
cpy -m 0755               configure "${DIR}"
cpy -d .                  obj/Makefile  lib/Makefile modules/Makefile bin/Makefile "${DIR}"
cpy -d build -c "Makefile|Makefile.top|configure.${BLD_PRODUCT}|*.defaults|config.*|*.make" "*"  "${DIR}/build"
cpy -m 0755 -d build configure.${BLD_PRODUCT} "${DIR}/build"
cpy -m 0755 -d build/bin  bld getlib makedep priv fakePriv mkdmg utest utest.worker "${DIR}/build/bin"
cpy -m 0755 -d build/bin  "make*Package*" makeInstall "${DIR}/build/bin"
cpy -m 0755 -d build/bin  all-in-one  "${DIR}/build/bin"
cpy -d build/src          Makefile "*.c" "*.h" "${DIR}/build/src"
cpy -d build/components   "*" "${DIR}/build/components"
cpy -d package            Makefile "*.files" "${DIR}/package"
cpy -m 0755 -d package    "*.sh" makeInstall.ejs linkup "${DIR}/package"
cpy -d package            LINUX MACOSX WIN "${DIR}/package"

#
#   Source for mpr, ejs, server, http
#
srcFilter="/\.log$"
cpy -f "${srcFilter}" -d src Makefile appweb mpr cmd compiler db ejsmod mpr types vm include  "${DIR}/src"

esFilter="/spec/|/es/util/"
cpy -f "${esFilter}" -d src es "${DIR}/src"

protoFilter="proto/|/legacy/"
cpy -f "${protoFilter}" -d src web "${DIR}/src"

cpy -d test Makefile cmd db lang lib misc regress ssl stress web *.db *.conf test.* "${DIR}/test"
cpy all/Makefile.all all/Makefile  "${DIR}/all"

docFilter="api/ejs/xml/|api/ejs/html/|Archive"
cpy -f "${docFilter}" doc "${DIR}"

samplesFilter="\.mod$|\.so$|\.dylib$|\.js$|\.o"
cpy -f "${samplesFilter}" samples "${DIR}"

projectsFilter="/Debug|/Release|\.user|\.suo|\.ncb|*.mode1v3|*.pbxuser|/ejs.build/|iphone|ejs-all"
cpy -f "${projectsFilter}" projects "${DIR}"

cat src/include/master/buildConfig.h | sed 's/-VERSION-/${BLD_VERSION}/;s/-NUMBER-/${BLD_NUMBER}/' \
    >"${DIR}/src/include/buildConfig.h"

if [ $TASK = Remove ] ; then
    if [ "`pwd`" != "$DIR" ] ; then
        ${RM} -f "${DIR}/buildConfig.*" "${DIR}/src/include/buildConfig.*" "${DIR}/build/bin/buildConfig.*"
    fi
fi
